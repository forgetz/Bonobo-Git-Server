@model ActivityCommitModels

<div class="commit pure-g">
    <div class="pure-u-3-5">
        <h2><a href="@Url.Action("Detail", "Repository", new { id = Model.id })">@Model.ProjectName</a></h2>
        <div class="commitdate">
            @Model.When.ToString("dd/MM/yyyy HH:mm:ss")
        </div>
        <div class="commitdate">
            <a href="@Url.Action("Commit", "Repository", new { id = Model.id, commit = Model.idSha })">@Model.Message</a>
        </div>
    </div>
    <div class="pure-u-2-5 metadata">
        <div>
            <h4>@Model.CommitterName</h4>
            <p>Commit: <a href="@Url.Action("Commit", "Repository", new { id = Model.id, commit = Model.idSha })">@Model.idSha.Substring(0, 7)</a></p>
        </div>
    </div>
</div>